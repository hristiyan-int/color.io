{
  "expo": {
    "name": "Color.io",
    "slug": "color-io",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "colorio",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.colorio.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Color.io needs camera access to capture photos and extract beautiful color palettes from the world around you.",
        "NSPhotoLibraryUsageDescription": "Color.io needs photo library access to extract color palettes from your existing photos.",
        "NSPhotoLibraryAddUsageDescription": "Color.io needs permission to save color palette images to your photo library.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.colorio.app",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Color.io to access your camera to capture photos for color extraction."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Color.io to access your photos to extract color palettes."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Color.io to save color palette images to your photo library.",
          "savePhotosPermission": "Allow Color.io to save exported palette images.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "owner": "colorio",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/your-project-id-here"
    }
  }
}
